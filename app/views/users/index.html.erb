<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="row">
        <div class="col">
          <%= render 'userinfo', user: current_user %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= render 'books/new', book: @book %>
        </div>
      </div>
    </div>
    <div class="col-lg-8 offset-md-1">
      <h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= image_tag user.get_profile_image(70,70) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show" , user_path(user.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
    </div>
  </div>
</div>