<h2>New book</h2>

<div class="form-group">
    <%= form_with model: book do |f| %>
      <label>Title</label>
        <%= f.text_field :title, class: 'form-control mb-3' %>
      <label>Opinion</label>
        <%= f.text_area :body, class: 'form-control mb-3' %>
        <%= f.submit 'Create Book', class: 'btn btn-success text-decoration-none text-light' %>
    <% end %>
</div>